{{- $mainSections := site.Params.mainSections | default (slice "posts") -}}
{{- $pages := .Pages -}}
{{- if .IsHome -}}
  {{- $pages = where site.RegularPages "Section" "in" $mainSections -}}
{{- end -}}
{{- $limit := site.Config.Services.RSS.Limit | default 10 -}}
{{- if gt $limit 0 -}}
  {{- $pages = first $limit $pages -}}
{{- end -}}
{{ printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom" xmlns:content="http://purl.org/rss/1.0/modules/content/">
  <channel>
    <title>{{ if .IsHome }}{{ site.Title }}{{ else }}{{ .Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>{{ .Description | default (printf "Recent content in %s" .Title) }}</description>
    <generator>Hugo -- gohugo.io</generator>
    <language>{{ site.Language.LanguageCode }}</language>
    {{- with site.Copyright }}
    <copyright>{{ . }}</copyright>
    {{- end }}
    {{- if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</lastBuildDate>
    {{- end }}
    {{- with .OutputFormats.Get "RSS" }}
    <atom:link href="{{ .Permalink }}" rel="self" type="application/rss+xml" />
    {{- end }}
    {{- range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" }}</pubDate>
      {{- with .Params.author }}
      <author>{{ . }}</author>
      {{- end }}
      <guid>{{ .Permalink }}</guid>
      <description>{{ .Summary | html }}</description>
      <content:encoded><![CDATA[{{ .Content | safeHTML }}]]></content:encoded>
    </item>
    {{- end }}
  </channel>
</rss>
