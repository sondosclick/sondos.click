# .gitignore for a Jekyll site (openSUSE / generic)

# Jekyll output
_site/
.jekyll-cache/
.jekyll-metadata

# Sass / CSS caches
.sass-cache/

# Bundler / Ruby
.bundle
vendor/bundle
vendor/cache
tmp/
log/
*.gem

# System files
.DS_Store
Thumbs.db

# Editor/IDE
.vscode/
.idea/
*.swp
*.swo
*.sublime-workspace
*.sublime-project

# Node
node_modules/
npm-debug.log
yarn-error.log

# dotenv
.env
.env.*

# OS generated files
ehthumbs.db
Desktop.ini

# Coverage / test output
/coverage/
test/tmp/

# Optional: vendor themes/build artifacts
assets/main.css
